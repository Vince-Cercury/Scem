<%= render :partial => "header" %>

<div class="pictureNew">

  <% form_for(@picture, :url => url_for_even_polymorphic(@picture), :html => { :multipart => true }) do |f| %>

    <%=  hidden_field_tag :parent_id, @parent_object.id %>
    <%=  hidden_field_tag :parent_type, @parent_object.class.to_s %>
    <div class="pictureNewCenter">
      <%= render :partial => 'form', :locals => {:f => f}%>
    </div>

    <div class="pictureNewCenter">
      <%= f.submit t('pictures.new.Create')%>
    </div>
  <% end %>

</div>
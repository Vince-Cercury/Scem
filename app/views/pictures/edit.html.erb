<%= render :partial => "header" %>
<hr />
<h3>Editing picture</h3>

<%=  image_tag(@picture.attached.url(:medium)) %>

<% form_for(@picture, :url => url_for_even_polymorphic(@picture), :html => { :multipart => true }) do |f| %>

 <%= f.error_messages %>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

 
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

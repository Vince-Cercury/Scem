<%= render :partial => "/users/header" %>
<h4><%= t('users.edit.Editing_user') %></h4>
<% if current_user.facebook_user? %>
  <%= t('users.edit.Facebook_user') %>
    <% form_for(@user) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :receive_comment_notification %><br />
      <%= f.check_box :receive_comment_notification %>
    </p>
    <p>
      <%= f.label :receive_picture_notification %><br />
      <%= f.check_box :receive_picture_notification %>
    </p>
    <p>
      <%= f.submit  t('users.edit.Update') %>
    </p>
  <% end %>
<% else %>
  <% form_for(@user) do |f| %>
    <%= f.error_messages %>

    <p><%= label_tag  t('users.edit.Login') %><br/>
    <%= f.text_field :login %></p>

    <p><%= label_tag  t('users.edit.First_name') %><br/>
    <%= f.text_field :first_name %></p>

    <p><%= label_tag t('users.edit.Last_name')  %><br/>
    <%= f.text_field :last_name %></p>

    <p><%= label_tag t('users.edit.Birth_date')  %><br/>
    <%= f.date_select(:date_of_birth, :start_year => 1900, :end_year => 2005, :default => 15.years.ago) %></p>

    <p><%= label_tag t('users.edit.Email')  %><br/>
    <%= f.text_field :email %></p>
    <p>
      <%= f.label :receive_comment_notification %><br />
      <%= f.check_box :receive_comment_notification %>
    </p>
    <p>
      <%= f.label :receive_picture_notification %><br />
      <%= f.check_box :receive_picture_notification %>
    </p>
    <p>
      <%= f.submit t('users.edit.Update')  %>
    </p>
  <% end %>
<% end %>

<%= link_to t('users.edit.Show') , @user %> |
<%= link_to t('users.edit.Back') , users_path %>

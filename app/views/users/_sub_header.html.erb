<ul class='tabsShowUser'>
  <li>
    <% if controller_name != 'users' || controller.action_name=='edit' %>
      <%= link_to(t('users.tabs.profil'), @user) %>
    <% else %>
      <%= link_to(t('users.tabs.profil'), @user, :class => 'selected') %>
    <% end %>
  </li>
  <% if @user.posts.size > 0 || current_user_equal(@user) %>
    <li>
      <% if controller_name != 'posts' %>
        <%= link_to(t('users.tabs.blog'), user_posts_path(:user_id => @user.id)) %>
      <% else %>
        <%= link_to(t('users.tabs.blog'), user_posts_path(:user_id => @user.id), :class => 'selected') %>
      <% end %>
    </li>
  <% end %>
  <% if @user.participations.size > 0 || current_user_equal(@user) %>
    <li>
      <% if controller_name != "participations" %>
        <%= link_to(t('users.tabs.participation'), user_participations_path(:user_id => @user.id)) %>
      <% else %>
        <%= link_to(t('users.tabs.participation'), user_participations_path(:user_id => @user.id), :class => 'selected') %>
      <% end %>
    </li>
  <% end %>
    <% if count_next_user_organisms_terms(@user).size > 0 || current_user_equal(@user) %>
    <li>
      <% if controller_name != "user_organisms_terms" %>

        <%= link_to(t('users.tabs.network'), user_organisms_terms_path(:user_id => @user.id)) %>
      <% else %>
        <%= link_to(t('users.tabs.network'), user_organisms_terms_path(:user_id => @user.id), :class => 'selected') %>

      <% end %>
    </li>
  <% end %>
  <% if @user.organisms_users.size > 0 || current_user_equal(@user) %>
    <li>
      <% if controller_name != "memberships" %>
        <%= link_to(t('users.tabs.membership'), user_memberships_path(:user_id => @user.id, :role =>:member)) %>
      <% else %>
        <%= link_to(t('users.tabs.membership'), user_memberships_path(:user_id => @user.id, :role =>:member), :class => 'selected') %>
      <% end %>
    </li>
  <% end %>
  <% if @user.facebook_user? %>
    <li>
      <% if controller_name != "friends" %>
        <%= link_to(t('users.tabs.friends'), user_friends_path(:user_id => @user.id)) %>
      <% else %>
        <%= link_to(t('users.tabs.friends'), user_friends_path(:user_id => @user.id), :class => 'selected') %>
      <% end %>
    </li>
  <% end %>
  <% if current_user_equal(@user) %>
    <li>
      <% if (controller_name != 'users' || controller.action_name!='edit') %>
        <%= link_to(t('users.tabs.edit'), edit_user_path(@user)) %>
      <% else %>
        <%= link_to(t('users.tabs.edit'), edit_user_path(@user), :class => 'selected') %>
      <% end %>
    </li>
  <% end %>
</ul>

 <div id="comments">
    <% if @current_object.comments.size == 0 %>

      <div class="commentaire">
        No comment at the moment
      </div>
    <% else %>
      <% @comments.each do |comment| %>
        <%= render :partial => "/comments/comment", :locals => {:comment => comment } %>
      <% end %>
    <% end %>
 </div>

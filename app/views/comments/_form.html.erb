<% if logged_in? -%>
  <div id="create-comment-form">

    <div class="commentaireBodyMiddle">
      
      <% if @current_object.comments.size == 0 %>
        <h5 class="caps"><%= t('comments.form.Be_the_first_to_write') %></h5>
      <% else %>
        <h5 class="caps"><%= t('comments.form.Add_a_comment') %></h5>
      <% end %>
      <div class="commentaireBodyMiddleLeft">
        <%= display_user_cover_by_id(current_user.id, :thumb) %>
        <%= get_user_name_or_pseudo_link_by_id(current_user.id) %>
      </div>
      <div class="commentaireBodyMiddleRight" id="create-form-content">
        <%= render :partial => "/comments/create_form" %>
      </div>
    </div>


  </div>
  <div class="create-comment-spinner" id="create-comment-spinner" style="display:none;">
    <%= image_tag "spinner-horizontal-big.gif", :class => "image", :alt => "loading form" %>
  </div>
<% else %>
  </div>
  <div class="eventShowBodyCommentaire">
    <h5 class="caps"><%= t('comments.form.U_need_to_be_connected') %></h5>
    <div class="loginBox">
      <div class="loginLeft">
        <h4 class="caps"><%= t('comments.form.Limited_account') %></h4>
        <% form_tag session_path do -%>
          <p><%= label_tag t('comments.form.Login') %><br />
          <%= text_field_tag 'login', @login %></p>

          <p><%= label_tag t('comments.form.Password') %><br/>
          <%= password_field_tag 'password', nil %></p>

          <!-- Uncomment this if you want this functionality -->
          <p><%= label_tag 'remember_me', t('comments.form.Remember_me') %>
          <%= check_box_tag 'remember_me', '1', @remember_me %></p>

          <p><%= submit_tag t('comments.form.Log_in') %></p>
        <% end -%>

        <h4 class="caps"><%= link_to t('comments.form.Sign_up'), signup_path, { :title => t('comments.form.Create_an_account') } %></h4>
      </div>
      <div class="loginRight">
        <h3 class="caps"><%= t('comments.form.or_log_in_facebook_connect') %></h3>
        <br />
        <%= fb_login_button('window.location = "/facebook";')%>
        <br />
        <%= t('comments.form.Facebook_ad') %>
      </div>
      <div class="loginPub">
        <script type="text/javascript"><!--
          google_ad_client = "pub-3129952355573123";
          /* 468x60, date de crÃ©ation 02/11/09 */
          google_ad_slot = "6972458001";
          google_ad_width = 468;
          google_ad_height = 60;
          //-->
        </script>
        <script type="text/javascript"
                src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
        </script>
      </div>
    </div>
  </div>
  <div>

  <% end %>

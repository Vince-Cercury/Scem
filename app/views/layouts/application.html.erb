  <%#= hidden_field_tag :date, params[:date] %>
  <%# end %>
                  <%= text_field_tag :search, params[:search], :size=>20 %>
                  <%= submit_tag "Go", :name => nil %>

                <% end %>
              </div>
              <div class="titlecalendar">
             <!-- <h3 class="caps"><%= t("side_bar.calendar") %></h3>-->
              </div>
              <%= render :partial => "/calendar/display" %>
<%#= events_calendar_display %>
              <br />
              <div class="titlepublicity"></div>
              <div class="publicitybox">
                <p>Votre publicité ICI, contactez nous à publicite@lebounce.com</p>
                <script type="text/javascript"><!--
                  google_ad_client = "pub-3129952355573123";
                  /* 200x200, date de création 29/10/09 */
                  google_ad_slot = "0430759924";
                  google_ad_width = 200;
                  google_ad_height = 200;
                  //-->
                </script>
                <script type="text/javascript"
                        src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
                </script>
              </div>

              <%= render :partial => "/diary/side_diary" %>
              <div class="titlepartners"></div>

              <div class="partnersbox">
                <a href="http://www.fe2a.fr/joomla/" target=_blank <img src="/images/partners/fe2a.png" alt="La Fé2a" title="La Fé2a soutient le Bounce :-D"></a>
                <a href="http://www.facebook.com/intercampusangers" target=_blank <img src="/images/partners/intercampus.jpg" alt="InterCampus" title="InterCampus soutient le Bounce :-D"></a>
                <a href="http://www.ville-saint-barthelemy-anjou.fr/thv/accueil.htm" target=_blank <img src="/images/partners/THV.jpg" alt="Le THV" title="Le THV soutient le Bounce :-D"></a>

<div id="results">
  <div class="activitiesBody">
    <% @activities.each do |activity| %>
      <div class="activities">
        <div class="activitie">
          <% if activity.organisms.size>0 %>
            <h2><%= link_to(activity.name, activity) %> (<%= activity.organisms.size %>) </h2>

          <% else %>
            <h2><%= activity.name %></h2>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= will_paginate @activities, :params => {:anchor => "top" }  %>
</div>
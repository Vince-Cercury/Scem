<h1><%= t('activities.edit.Edit') %></h1>

<% form_for(@activity) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= t('activities.edit.Name') %><br />
    <%= f.text_field :name, :class => 'title' %>
  </p>
  <p>
    <%= t('activities.edit.Description')%><br />
    <%= f.text_area :description, :cols => 35, :rows => 5 %>
  </p>
  <p>
    <%= f.submit t('activities.edit.Update') %>
  </p>
<% end %>

<%= link_to t('activities.edit.Show'), @activity %> |
<%= link_to t('activities.edit.Back'), activities_path %>

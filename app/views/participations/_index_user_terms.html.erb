<%= render :partial => "/users/header" %>
<%= render :partial => "user_terms_sub_header" %>


<% form_tag user_participations_path, :method => 'get' do %>
  <p>
    <%=  hidden_field_tag 'role', params[:role] %>
    <%=  hidden_field_tag 'period', params[:period] %>

    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<ul class='tabs'>
  <% if params[:period] == 'past' %>
    <li><% if params[:role]!='sure' %><%= link_to "participate to #{@user.sure_participate_past.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:sure, :period => params[:period]) %><% else %><%= link_to "participate to #{@user.sure_participate_past.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:sure, :period => params[:period]) %><% end %></li>
    <li><% if params[:role]!='maybe' %><%= link_to "might participate to #{@user.maybe_participate_past.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:maybe, :period => params[:period]) %><% else %><%= link_to "might participate to #{@user.maybe_participate_past.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:maybe, :period => params[:period]), :class => 'selected' %><% end %></li>
    <li><% if params[:role]!='not' %><%= link_to "do not participate to #{@user.not_participate_past.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:not, :period => params[:period]) %><% else %><%= link_to "do not participate to #{@user.not_participate_past.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:not, :period => params[:period]), :class => 'selected' %><% end %></li>
  <% else %>
    <li><% if params[:role]!='sure' %><%= link_to "participate to #{@user.sure_participate_futur.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:sure, :period => params[:period]) %><% else %><%= link_to "participate to #{@user.sure_participate_futur.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:sure, :period => params[:period]) %><% end %></li>
    <li><% if params[:role]!='maybe' %><%= link_to "might participate to #{@user.maybe_participate_futur.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:maybe, :period => params[:period]) %><% else %><%= link_to "might participate to #{@user.maybe_participate_futur.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:maybe, :period => params[:period]), :class => 'selected' %><% end %></li>
    <li><% if params[:role]!='not' %><%= link_to "do not participate to #{@user.not_participate_futur.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:not, :period => params[:period]) %><% else %><%= link_to "do not participate to #{@user.not_participate_futur.size} event(s) term", user_participations_path(:user_id => @user.id, :role =>:not, :period => params[:period]), :class => 'selected' %><% end %></li>
  <% end %>
</ul>


<div id="results">
  <% @events.each do |event| %>
    <div class="span-4 colborder">
      <%= display_event_cover(event, :small) %>
    </div>
    <div class="span-12 last">
      <div class="box">
        <h4 class="prepend-5"><%= link_to(event.name, event) %></h4>
        <%=h event.description_short %>


        <% event.terms.each do |term| %>
          <div class="quiet">
            <%= display_term_box(term.start_at, term.end_at) %>
          </div>
        <% end %>
        <%= render :partial => "rating/mini_rating", :locals => { :current_object => event } if event.rating > 0 %>
      </div>
    </div>
    <hr />
  <% end %>
  <%= will_paginate @events %>
  <% if @events.size == 0 %>
    <div class="box">
      Sorry, no result
    </div>
  <% end %>
</div>
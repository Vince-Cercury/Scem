<% @event.terms.each do |@term| %>
<b><%=  link_to(display_term_box(@term.start_at, @term.end_at),url_for_even_polymorphic(@term)) %></b>
<%#= raise @term.start_at.in_time_zone.strftime("%H:%M").inspect %>

      <% if facebook_session %>
        <br />
        <% if @term.facebook_eid %>
          <%= link_to t('events.terms.See_on_Facebook'), "http://wwwfacebook.com/event.php?eid=#{@term.facebook_eid}", :target => 'blank' %>
          <% if current_user && current_user.facebook_user? && facebook_session && @event.is_user_moderator?(current_user) %>
            (<%= link_to t('events.terms.Delete_the_Facebook_page'), url_for(:controller => 'facebook', :id =>@term.id, :action => 'ask_facebook_event_cancel_message') %> )
          <% end  %>
        <% else %>
          <% if current_user && current_user.facebook_user? && facebook_session && @event.is_user_moderator?(current_user) %>
            <%= link_to t('events.terms.Publish_on_Facebook'), url_for(:controller => 'facebook', :id =>@term.id, :action => 'ask_facebook_event_categories') %>
          <% end %>
        <% end %>
      <% else %>
        <% if @term.facebook_eid %>
          <br />
          <%= link_to t('events.terms.See_on_Facebook'), url_for(login_path) %>
        <% end  %>
      <% end %>
      <% if current_user && @event.is_user_moderator?(current_user) %>
        <br />
        <%= link_to t('events.terms.Edit'), edit_url_for_even_polymorphic(@term) %> |
        <%= link_to t('events.terms.Destroy'), @term, :confirm => t('.terms.Are_you_sure?'), :method => :delete %>
      <% end  %>



      <% if logged_in? -%>
        <% form_tag :controller => 'participations', :action => 'create_or_update' do %>
          <%=  hidden_field_tag 'term_id', @term.id %>
          <%=  hidden_field_tag 'user_id', current_user.id %>

          <%= t('events.terms.sure') %><%= radio_button :participation, :role, "sure", :checked => @term.is_user_participant(current_user, 'sure')%>

          <%= t('events.terms.maybe') %><%= radio_button :participation, :role, "maybe", :checked => @term.is_user_participant(current_user, 'maybe') %>

          <%= t('events.terms.not') %><%= radio_button :participation, :role, "not", :checked => @term.is_user_participant(current_user, 'not') %>


          <%= submit_tag t('events.terms.Go'), :name => nil %>
        <% end  %>
      <% end  %>
      <%= t('events.terms.Participation') %>
      <% if @term.sure_participants.size> 0 %><%= link_to t('events.terms.sure'), term_participations_path(:term_id => @term.id, :role =>:sure) %>: <%= @term.sure_participants.size %><% else %>sure: 0<% end %> |
      <% if @term.maybe_participants.size> 0 %><%= link_to t('events.terms.maybe'), term_participations_path(:term_id => @term.id, :role =>:may_be) %>: <%= @term.maybe_participants.size %><% else %>maybe: 0<% end %> |
      <% if @term.not_participants.size> 0 %><%= link_to t('events.terms.not'), term_participations_path(:term_id => @term.id, :role =>:not) %>: <%= @term.not_participants.size %><% else %>no: 0<% end %>


        <% if !@term.description.blank? %>
    <div class="box">
      <%= @term.description %>
    </div>
      <% end %>

  <hr />
<% end %>

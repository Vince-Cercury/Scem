<h1>New organism</h1>

<% form_for(@organism, :live_validations => true) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => 'title' %>
  </p>
  <p> 
    <%= f.label :description_short %><br />
    <%= f.text_area :description_short, :cols => 35, :rows => 5 %>
  </p>
  <p>
    <%= f.label :manager_name %><br />
    <%= f.text_field :manager_name, :style => 'text' %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone, :style => 'text' %>
  </p>
  <p>
    <%= f.submit t('organisms.new.Create') %>
  </p>
<% end %>

<%= link_to t('organisms.new.Back'), organisms_path %>

<div id="results">
  
    <div class="organismList">
      <% @organisms.each do |organism| %>
        <div class="organismListBox">
          <div class="organismListBoxImage">
            <%= display_organism_cover(organism, :small) %>
          </div>
          <div class="organismListBoxName">

            <h2><%= link_to(organism.name, organism) %></h2>
          </div>
          <div class="organismListBoxRight">
            <p>
              <%=h organism.description_short %>
            </p>
            <p>
            <%= render :partial => "rating/mini_rating", :locals => { :current_object => organism } if organism.rating > 0 %>
            </p>
          </div>
        </div>
      <% end %>
      <%= will_paginate @organisms, :params => {:anchor => "top" }  %>
      <% if @organisms.size == 0 %>
        <div class="organismListMessage">
          <%= t('organisms.list.Sorry_no_result') %>
        </div>
      <% end %>
    </div>
  </div>

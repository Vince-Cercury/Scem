<div id="results">
  <% @organisms.each do |organism| %>
   <div class="listSeparator">
     <div class="listLeft">
        <%= display_organism_cover(organism, :small) %>
     </div>
     <div class="listRight">
         <div class="box">
        <h4 class="box"><%= link_to(organism.name, organism) %></h4>

        <%=h organism.description_short %>
        <div class="quiet">
          <%= render :partial => "rating/mini_rating", :locals => { :current_object => organism } if organism.rating > 0 %>
        </div>
      </div>
      </div>
  </div>
  <% end %>
  <%= will_paginate @organisms %>
  <% if @organisms.size == 0 %>
    <div class="box">
      Sorry, no result
    </div>
  <% end %>
</div>
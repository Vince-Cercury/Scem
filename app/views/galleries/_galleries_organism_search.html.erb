<%= render :partial => "/organisms/header" %>
<div class="GalleryListHeader">
  <div class="GalleryListHeaderLeft">
    <% form_tag organism_galleries_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag t('galleries.organism_search.Search'), :name => nil %>
    <% end %>
  </div>
  <div class="GalleryListHeaderRight">
    <% if is_organism_admin?(@organism) %>
      <%= link_to(t('galleries.organism_search.New_gallery'), url_for(:controller => 'galleries', :action => 'new', :parent_id =>@parent_object.id, :parent_type => @parent_object.type)) %>
    <% end %>
  </div>
</div>
<%= render :partial => "/events/header" %>
<% form_tag event_galleries_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
<% if is_event_moderator?(@event) %>
<%= link_to("Attach a new gallery !", url_for(:controller => 'galleries', :action => 'new', :parent_id =>@parent_object.id, :parent_type => @parent_object.type)) %>
<br /><br />
<% end %>